{
    "compilerOptions": {
      "target": "ES2020",           // Promise, async/await 지원
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": ["ES2020", "DOM"],
      "outDir": "dist",             // 컴파일된 .js 파일이 저장될 위치
      "resolveJsonModule": true,
      "strict": true
    },
    "include": ["*.ts"]
  }
  